<br>
<div class="container">
	<%=form_for @user do|f| %>

	<div class = "field">
		<label for="formGroupExampleInput">First Name</label>
		<%= f.text_field :first_name, class: "form-control", id: "formGroupExampleInput", type: "text", placeholder: "Enter your First Name here" %>
	</div>

	<div class = "field">
		<label for="formGroupExampleInput">Last Name</label>
		<%= f.text_field :last_name, class: "form-control", id: "formGroupExampleInput", type: "text", placeholder: "Enter your First Name here" %>
	</div>

	<div class = "field">
		<label for="formGroupExampleInput">Password</label>
		<%= f.text_field :password, class: "form-control", id: "formGroupExampleInput", type: "password", placeholder: "**********" %>
	</div>

	<div class = "field">
		<label for="formGroupExampleInput">Qualifications</label>
		<%= f.text_area :qualification, class: "form-control", id: "formGroupExampleInput", type: "text", placeholder: "Enter your Qualifications here", rows: 5 %>
	</div>
	<hr>
	<div class="text-center">
		<div class = "actions">
			<%= f.submit "Update", class: 'btn btn-primary'%>
		</div>
	</div>
	<%end%>
	
	<%= link_to "Back", root_path%>
</div>
