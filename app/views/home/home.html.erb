<!-- Page Content -->
<% if signed_in? %>
  <div class="container bg-light">
    <div class="row">
        <%= link_to "Questions", questions_path, id: "questions", class: "col text-center btn btn-light active shadow-sm", remote: true %>
        <%= link_to "Notes", notes_path, id: "notes", class: "col text-center btn btn-light", remote: true %>
        <%= link_to "Flash Cards", flash_cards_path, id: "flashcards", class: "col text-center btn btn-light", remote: true %>
        <%= link_to "Quizzes", quizzes_path, id: "quizzes", class: "col text-center btn btn-light", remote: true %>
    </div>
      <div class="row">
        <div class="col" id="content">
          <%= render 'questions/index', question: @questions %>
        </div>
    </div>
  </div>
<% else %>

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <!-- Slide One - Set the background image for this slide in the line below -->
            <div class="carousel-item active">
              <img src="http://www.etpaustralia.com.au/wp-content/uploads/2018/02/1-1900x900.jpg">
              <div class="carousel-caption d-none d-md-block">
                <h3 class="captions-top">Learn online</h3>
                <p class="captions">Study anywhere and anytime</p>
              </div>
            </div>
            <!-- Slide Two - Set the background image for this slide in the line below -->
            <div class="carousel-item">
            <img src="https://s3.amazonaws.com/cdn.fizara.com/wp-content/uploads/2014/12/18145636/fizara_diy_photo_album03.jpg">
              <div class="carousel-caption d-none d-md-block">
                <h3 class="captions-top">Build your portfolio</h3>
                <p class="captions">Create your own customizable courses for your students</p>
              </div>
            </div>
            <!-- Slide Three - Set the background image for this slide in the line below -->
            <div class="carousel-item">
            <img src="http://neelsonit.com/images/classromm-bg.jpg">
              <div class="carousel-caption d-none d-md-block">
                <h3 class="captions-top">Get feedback</h3>
                <p class="captions">Get feedback for teachers and students from teachers and students</p>
              </div>
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

  <section class="py-5">
    <div class="container">
        <div class="text-center">
          <a href="/sign_in"><button class="btn btn-primary">Sign In</button></a>
          <a href="/sign_up"><button class="btn btn-primary">Sign Up</button></a>
        </div>
    </div>
  </section>
<% end %>