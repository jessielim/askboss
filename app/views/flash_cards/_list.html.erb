<div class="row">
	<h1 class="col">Flash Cards</h1>
	<% if !current_user.student? %>
		<%= link_to "Create Flash Card", new_flash_card_path, class: "col-md-auto align-middle text-center btn btn-outline-secondary btn-sm" %>
	<% end %>
	<div class="col col-lg-1"></div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Created by</th>
      <th scope="col">Tags</th>
      <th></th>
    </tr>
  </thead>
  	<tbody>
			<% for i in @flashcards do%>
		    <tr>
		    	<td><%= i.name %></td>
		    	<td><%= i.user.first_name %> <%= i.user.last_name %></td>
       	 <td></td>
          <td class="text-right">
          <% if !current_user.student? %>
		    	<%= link_to image_tag("https://image.flaticon.com/icons/svg/159/159604.svg", width: 25),flash_card_path(i.id) %> | 
		    	<%= link_to image_tag("https://image.flaticon.com/icons/svg/53/53694.svg", width: 25,), edit_flash_card_path(i.id) %> | 
		    	<%= link_to image_tag("https://image.flaticon.com/icons/png/128/121/121113.png", width: 25), note_path(i.id), method: :delete, data: { confirm: 'Are you sure?' } %>
		    		<% else %>
		    		<%= link_to image_tag("https://image.flaticon.com/icons/svg/159/159604.svg", width: 25),flash_card_path(i.id) %>
		    		<% end %>
		    	</td>
		    </tr>
			<%end%>
  	</tbody>
</table>
