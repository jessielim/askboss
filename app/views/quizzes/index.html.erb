<p id="notice"><%= notice %></p>

<h1>Quizzes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Quiz</th>
      <th>Created by</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td style="white-space: nowrap;"><%= quiz.name %></td>
        <td style="white-space: nowrap;"><%= quiz.user.first_name %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
          <td colspan="3"><%= link_to image_tag("https://image.flaticon.com/icons/svg/159/159604.svg", width: 30), quiz%>
          <%= link_to image_tag("https://image.flaticon.com/icons/svg/53/53694.svg", width: 30,), edit_quiz_path(quiz) %>
          <%= link_to image_tag("https://image.flaticon.com/icons/png/128/121/121113.png", width: 30), quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="text-center">
  <%= link_to 'New Quiz', new_quiz_path, class: 'btn btn-light' %>
</div>