<div class="row">
  <h1 class="col">Notes</h1>
  <% if !current_user.student? %>
  <div class="ol-md-auto align-middle">
    <%= link_to "Create Notes", new_note_path, class: "col-md-auto align-middle text-center btn btn-outline-secondary" %>
    </div>
  <% end %>
  <div class="col col-lg-1"></div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Created by</th>
      <th scope="col">Tags</th>
      <th></th>
    </tr>
  </thead>
  	<tbody>
			<% for i in @notes do%>
		    <tr>
		    	<td><a href="/notes/<%= i.id %>"><%= i.name %></a></td>
		    	<td><%= i.user.first_name %> <%= i.user.last_name %></td>
       	 <td><%= raw(i.tag_list.map { |t| link_to t, tag_path(t) }.join(', ')) %></td>
          <td class="text-right">
          <% if !current_user.student? %>
  		    	<%= link_to image_tag("https://image.flaticon.com/icons/svg/159/159604.svg", width: 25),note_path(i.id) %> | 
  		    	<%= link_to image_tag("https://image.flaticon.com/icons/svg/53/53694.svg", width: 25,), edit_note_path(i.id) %> | 
  		    	<%= link_to image_tag("https://image.flaticon.com/icons/png/128/121/121113.png", width: 25), note_path(i.id), method: :delete, data: { confirm: 'Are you sure?' } %>
		    		<% else %>
		    		<%= link_to image_tag("https://image.flaticon.com/icons/svg/159/159604.svg", width: 25),note_path(i.id) %> | 
		    		<% end %>
            <%= link_to image_tag("https://image.flaticon.com/icons/svg/684/684872.svg", width: 25), note_path(i.id) %>
		    	</td>
		    </tr>
			<%end%>
  	</tbody>
</table>

<br/>
<br/>