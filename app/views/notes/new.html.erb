<head>
	<title>New note - <%= current_user.first_name %></title>
</head>
<br>
<div class="container">
	<%=form_for @note do |form| %>
		
		<div class ="field">
			<label for="formGroupExampleInput">Note</label>
			<%=form.text_field :name, class: "form-control", id: "formGroupExampleInput", type: "text", placeholder: "Enter Note name here" %>
		</div>
		<br>
		<div class="field">
		    <label for="formGroupExampleInput">File</label>
		    <%= form.file_field :libraries, multiple: true, type: "file", class: "form-control-file", id: "exampleFormControlFile1" %>
	  	</div>
	  	<br>
	  	<div class='field'>
	  	  <%= form.label :tag_list, 'Tags (separated by commas)' %><br/>
	  	  <%= form.text_field :tag_list, value: form.object.tag_list.to_s %>
	  	</div>
	<div class="text-center">
		<div class="submit-field">
			<%= link_to 'Back', dashboard_path(current_user), class: 'btn btn-light shadow-sm' %>
		  <%= form.submit "Create", class: 'btn btn-light shadow-sm' %>
		</div>
	</div>



	 <% end %>
 </div>