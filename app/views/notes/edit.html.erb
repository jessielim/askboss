<br>
<div class="container">
	<%=form_for @note do|f|%>

			<div class ="field">
				<label for="formGroupExampleInput">Note</label>
				<%=f.text_field :name, class: "form-control", id: "formGroupExampleInput", type: "text", placeholder: "Enter Note name here" %>
			</div>
			<br>
			<div class = "field">
				<label for="formGroupExampleInput">File</label>
				<%= f.file_field :libraries, multiple: true, type: "file", class: "form-control-file", id: "exampleFormControlFile1" %>
			</div>
			<br>
			<div class="text-center">
				<div class = "actions">
				 	<%= f.submit "Update", class: 'btn btn-primary' %>
				</div>
			</div>
	<%end%>
</div>
