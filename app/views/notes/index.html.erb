<head>
	<title>Notes</title>
</head>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Note</th>
      <th scope="col">Created by</th>
      <th scope="col"></th>
    </tr>
  </thead>
  	<tbody>
		<% for i in @notes do%>
		    <tr>
		    	<td><%= i.name %></td>
		    	<td><%= i.user.first_name %> <%= i.user.last_name %></td>
		    	<td><%= link_to image_tag("https://image.flaticon.com/icons/svg/159/159604.svg", width: 30),note_path(i.id) %>
		    	<%= link_to image_tag("https://image.flaticon.com/icons/svg/53/53694.svg", width: 30,), edit_note_path(i.id) %>
		    	<%= link_to image_tag("https://image.flaticon.com/icons/png/128/121/121113.png", width: 30), note_path(i.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
		    </tr>
  	</tbody>
</table>
		<br>
		<%end%>
<br>
<div class="text-center">

<!--Problem with destroying Note -->
	<%= link_to "New Note", new_note_path, class: 'btn btn-primary' %>
</div>